<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/line"
            android:textSize="18dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/result"
            android:textColor="#000"
            android:textSize="28dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="45dp"

             />
    </LinearLayout>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/linear1"
        android:id="@+id/GridLayout1"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/row"
        android:columnCount="4"
        android:orientation="horizontal"

        android:rowCount="5">

        <include

            android:id="@+id/root"
            layout="@layout/root_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"
            />


        <include
            android:id="@+id/bracket1"
            layout="@layout/bracket_button_one"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/bracket2"
            layout="@layout/bracket_button_two"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/divide"
            layout="@layout/divide_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/seven"
            layout="@layout/seven"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/eight"
            layout="@layout/eight"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/nine"
            layout="@layout/nine"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/multiply"
            layout="@layout/multiply_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/four"
            layout="@layout/four"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/five"
            layout="@layout/five"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/six"
            layout="@layout/six"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/minus"
            layout="@layout/minus_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/one"
            layout="@layout/one"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/two"
            layout="@layout/two"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/three"
            layout="@layout/three"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/plus"
            layout="@layout/plus_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/dot"
            layout="@layout/dot_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/zero"
            layout="@layout/zero"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/ce"
            layout="@layout/ce_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>

        <include
            android:id="@+id/equal"
            layout="@layout/equal_button"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/grid_height"/>



    </GridLayout>



</RelativeLayout>